generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id         String       @id @default(cuid())
  email      String       @unique
  name       String?
  password   String
  chessGames ChessGame[]
  createdAt  DateTime     @default(now())
  updatedAt  DateTime     @updatedAt
  PlayerData PlayerData[]
}

enum Result {
  WHITE_WIN
  BLACK_WIN
  DRAW
  IN_PROGRESS
}

model PlayerData {
  id          String     @id @default(cuid())
  userId      String
  user        User       @relation(fields: [userId], references: [id])
  color       String
  ChessGame   ChessGame? @relation(fields: [chessGameId], references: [id])
  chessGameId String?
}

enum GameStatus {
  WAITING
  IN_PROGRESS
  FINISHED
}

enum Color {
  WHITE
  BLACK
}

model ChessGame {
  id         String       @id @default(cuid())
  lobbyId    String
  user       User         @relation(fields: [userId], references: [id])
  userId     String
  fen        String
  pgn        String
  color      Color
  result     Result
  gameStatus GameStatus
  isJoinable Boolean      @default(false)
  players    PlayerData[]
  createdAt  DateTime     @default(now())
  updatedAt  DateTime     @updatedAt
}

model PastPlayedGame {
  id      Int    @id @default(autoincrement())
  fen     String
  pgn     String
  player1 String
  player2 String
}
